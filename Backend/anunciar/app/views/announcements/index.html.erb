<% title "Announcements" %>
<!-- Event card -->
<div class="mdl-grid">
<% @announcements.each do |announcement| %>
  <%= link_to announcement, :class => 'mdl-cell mdl-cell--12-col animated fadeInUp' do %>
  <div class="" >
    <div  class="demo-card-event mdl-card mdl-shadow--16dp" >
      <div class="mdl-card__title mdl-card--expand">
        <h4 style="text-align: center; font-size: 1.3rem; width: 100%; height: 100%; padding-top: 9%;">
          <%=announcement.title %>
        </h4>
      </div>
      <!-- <div class="mdl-card__actions mdl-card--border">
        
        <div class="mdl-layout-spacer"></div>
        <i class="material-icons">speaker_notes</i>
      </div> -->
    </div>
  </div>
  <% end %>
<% end %>
</div>

